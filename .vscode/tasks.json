{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "main.c",
                "-o",
                "main"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },

        {
            "label": "Run in CMD",     
            "type": "shell",
            "command": ["start cmd /k \"main.exe & pause & exit\""],
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },

        {
            "label": "Open CMD in this current directory",     
            "type": "shell",
            "command": ["start", "cmd"],
            "group": "test"
        }
        
    ]
}